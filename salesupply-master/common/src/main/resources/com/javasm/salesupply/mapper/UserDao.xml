<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javasm.salesupply.mapper.UserDao">
  <resultMap id="BaseResultMap" type="com.javasm.salesupply.domain.entity.User">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="pwd" jdbcType="VARCHAR" property="pwd" />
  </resultMap>

  <select id="selectUserById" resultType="com.javasm.salesupply.domain.entity.User">
    select * from user where username = #{username}
  </select>
</mapper>