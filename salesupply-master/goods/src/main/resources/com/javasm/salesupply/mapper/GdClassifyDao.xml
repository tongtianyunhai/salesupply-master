<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javasm.salesupply.mapper.GdClassifyDao">

    <resultMap id="BaseResultMap" type="com.javasm.salesupply.domain.entity.GdClassify">
        <!--@Table gd_classify-->
        <result property="classifyId" column="classify_id" jdbcType="INTEGER"/>
        <result property="classifyName" column="classify_name" jdbcType="VARCHAR"/>
        <result property="classifyDes" column="classify_des" jdbcType="VARCHAR"/>
        <result property="classifyIsparent" column="classify_isparent" jdbcType="INTEGER"/>
        <result property="createBy" column="create_by" jdbcType="INTEGER"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="remark1" column="remark1" jdbcType="VARCHAR"/>
        <result property="remark2" column="remark2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select classify_id,
               classify_name,
               classify_des,
               classify_isparent,
               create_by,
               update_by,
               create_time,
               update_time,
               remark1,
               remark2
        from supplymarketing.gd_classify
        where classify_id = #{classifyId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select classify_id,
               classify_name,
               classify_des,
               classify_isparent,
               create_by,
               update_by,
               create_time,
               update_time,
               remark1,
               remark2
        from supplymarketing.gd_classify
        where remark1 = 1;

    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        classify_id, classify_name, classify_des, classify_isparent, create_by, update_by, create_time, update_time,
        remark1, remark2
        from supplymarketing.gd_classify
        <where>
            <if test="classifyId != null">
                and classify_id = #{classifyId}
            </if>
            <if test="classifyName != null and classifyName != ''">
                and classify_name = #{classifyName}
            </if>
            <if test="classifyDes != null and classifyDes != ''">
                and classify_des = #{classifyDes}
            </if>
            <if test="classifyIsparent != null">
                and classify_isparent = #{classifyIsparent}
            </if>
            <if test="createBy != null">
                and create_by = #{createBy}
            </if>
            <if test="updateBy != null and updateBy != ''">
                and update_by = #{updateBy}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="remark1 != null and remark1 != ''">
                and remark1 = #{remark1}
            </if>
            <if test="remark2 != null and remark2 != ''">
                and remark2 = #{remark2}
            </if>
        </where>
    </select>
    <select id="primaryClassification" resultType="com.javasm.salesupply.domain.entity.GdClassify">
        select *
        from supplymarketing.gd_classify
        where remark1 = 0;

    </select>
    <select id="secondLevelDirectory" resultType="com.javasm.salesupply.domain.entity.GdClassify">
        select *
        from supplymarketing.gd_classify
        where remark1 = 1
          and classify_isparent = #{classifyId};
    </select>
    <select id="searchPageByCriteria" resultType="com.javasm.salesupply.domain.entity.GdClassify">
        select *
        from supplymarketing.gd_classify
        <where>
            <if test="classifyName != null and classifyName != ''">
                and classify_name like concat(concat('%',#{classifyName}),'%')
            </if>
            <if test="rid2 != null and rid2 != ''">
                and classify_isparent = #{rid2}
            </if>
        </where>

    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="classifyId" useGeneratedKeys="true">
        insert into supplymarketing.gd_classify(classify_name, classify_des, classify_isparent, create_by, update_by,
                                                create_time, update_time, remark1, remark2)
        values (#{classifyName}, #{classifyDes}, #{classifyIsparent}, #{createBy}, #{updateBy}, #{createTime},
                #{updateTime}, #{remark1}, #{remark2})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update supplymarketing.gd_classify
        <set>
            <if test="classifyName != null and classifyName != ''">
                classify_name = #{classifyName},
            </if>
            <if test="classifyDes != null and classifyDes != ''">
                classify_des = #{classifyDes},
            </if>
            <if test="classifyIsparent != null">
                classify_isparent = #{classifyIsparent},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark1 != null and remark1 != ''">
                remark1 = #{remark1},
            </if>
            <if test="remark2 != null and remark2 != ''">
                remark2 = #{remark2},
            </if>
        </set>
        where classify_id = #{classifyId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from supplymarketing.gd_classify
        where classify_id = #{classifyId}
    </delete>

</mapper>